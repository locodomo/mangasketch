{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "scripts/animate.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/animate",
      "dest": "scripts/animate.py"
    }
  ],
  "functions": {
    "api/animate/*.py": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/generate-guide/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "env": {
    "OPENAI_API_KEY": "@openai-api-key"
  }
} 